{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "assets/**/*.d.json.ts",
    "src/**/*.ts",
    "config.d.json.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
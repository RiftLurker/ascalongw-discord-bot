{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
}